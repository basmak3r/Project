@model EngineersMatrimony.Models.Profile



@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_RegistrationLayout.cshtml";
}





@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

  
    
<div class="form-style-10 m-2">
    <h1>Engineers Matrimony<span>Complete Your Profile!</span></h1>
    <form>
        <p>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        </p>

        <div class="section"><span>1</span><h4>Basic Details</h4></div>
        <div class="inner-wrap">
            <label>
                Name
                <div class="col-md-6">
                    @Html.EditorFor(model => model.PName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PName, "", new { @class = "text-danger" })
                </div>
            </label>
            <div class="row">
                <div class="col-md-6">
                    <label>
                        DOB
                        @Html.EditorFor(model => model.DOB, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DOB, "", new { @class = "text-danger" })
                    </label>
                </div>


                <div class="col-md-6">
                    <label>
                        Gender
                        @*@Html.EditorFor(model => model.Gender, new { htmlAttributes = new { @class = "form-control" } })*@
                        @Html.DropDownListFor(model => model.Gender, (IEnumerable<SelectListItem>)ViewBag.Genders, htmlAttributes: new { @class = "form-select" })
                        @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger" })
                    </label>
                </div>
            </div>

            <div class="col-md-6">
                <label>
                    Location
                    @*@Html.EditorFor(model => model.District, new { htmlAttributes = new { @class = "form-control" } })*@
                    @Html.DropDownListFor(model => model.District, (IEnumerable<SelectListItem>)ViewBag.Districts, htmlAttributes: new { @class = "form-select" })
                    @Html.ValidationMessageFor(model => model.District, "", new { @class = "text-danger" })
                </label>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <label>
                        Marital Status
                        @Html.DropDownListFor(model => model.MStatus, (IEnumerable<SelectListItem>)ViewBag.MStatus, htmlAttributes: new { @class = "form-select" })
                        @Html.ValidationMessageFor(model => model.MStatus, "", new { @class = "text-danger" })
                    </label>
                </div>


                <div class="col-md-6">
                    <label>
                        Family Type
                        @Html.DropDownListFor(model => model.FamilyType, (IEnumerable<SelectListItem>)ViewBag.FamType, htmlAttributes: new { @class = "form-select" })
                        @Html.ValidationMessageFor(model => model.FamilyType, "", new { @class = "text-danger" })
                    </label>
                </div>
            </div>

        </div>

        <div class="section"><span>2</span><h4>Email & Phone</h4></div>
        <div class="inner-wrap">
            <div class="row">
                <div class="col-md-6">
                    <label>
                        Email
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </label>
                </div>


                <div class="col-md-6">

                    <label>
                        Phone
                        @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                    </label>
                </div>
            </div>
        </div>

        <div class="section"><span>3</span><h4>Education & Career</h4></div>
        <div class="inner-wrap">
            <div class="row">
                <div class="col-md-6">
                    <label>
                        Education
                        @Html.EditorFor(model => model.Education, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Education, "", new { @class = "text-danger" })
                    </label>
                </div>


                <div class="col-md-6">
                    <label>
                        Career
                        @Html.EditorFor(model => model.Occupation, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Occupation, "", new { @class = "text-danger" })
                    </label>
                </div>
            </div>
            <label>
                Annual Income
                <div class="col-md-6">
                    @Html.EditorFor(model => model.AnnualIncome, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.AnnualIncome, "", new { @class = "text-danger" })
                </div>
            </label>

        </div>
        <div class="section"><span>4</span><h4>Appearance</h4></div>
        <div class="inner-wrap">
            <div class="row">

                <div class="col-md-6">
                    <label>
                        Height
                        @Html.EditorFor(model => model.Height, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Height, "", new { @class = "text-danger" })
                    </label>
                </div>



                <div class="col-md-6">
                    <label>
                        Weight
                        @Html.EditorFor(model => model.Weight, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Weight, "", new { @class = "text-danger" })
                    </label>
                </div>

            </div>
        </div>
        <div class="button-section">
            <input type="submit" value="Complete" class="btn btn-default" />

        </div>


    </form>
</div>




}




